@{
    ViewBag.Title = "Home Page";    
}

<h2>Dutch Treat</h2>
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/VanGogh.jpg" />
            <h3>Mug</h3>
            <ul class="product-props">
                <li>Price: $8.88</li>
                <li>Artist: Van Gogh</li>
                <li>Title: xD</li>
